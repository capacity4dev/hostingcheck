
<div id="checks" class="container">
    <?php foreach ($results as $group): ?>
        <?php if (!count($group->tests())): continue; endif; ?>

        <div class="section">
            <h2>
                <?php echo $group->scenario()->title(); ?>
            </h2>
            <table class="results">
                <thead>
                <tr>
                    <th class="check">Check</th>
                    <th class="result">Result</th>
                    <th class="info">Info</th>
                </tr>
                </thead>
                <tbody>
                <?php foreach ($group->tests() as $test): ?>
                    <?php $this->test = $test; ?>
                    <?php echo $this->render('results-test'); ?>
                <?php endforeach; ?>
                </tbody>
            </table>
        </div>

    <?php endforeach; ?>
</div>
